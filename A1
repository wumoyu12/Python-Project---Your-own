import os.path
from os import path

def Menu():
    option = str(input("1.Create a new quiz game\n2.Display existing game\n3.Play a quiz game"))

    match option:
        case "1":
            Create()
        case "2":
            Display()
        case "3":
            Play()
        case _:
            print("Invalid option")
            Menu()

def Create():
    global filename
    print("Introduction")
    gamename = str(input("Please enter the name of the game(Only letters)"))
    gamename = gamename.upper
    ifcorrect = Checkname(gamename)
    if ifcorrect == "false":
        Create()
  
    filename = str(gamename) + ".txt"
    Checkfile()
    if ifexists = False:
        Askquestion()
    else:
        print("This game has already been created")
        Menu()

def AskCQ():
    global howmany, count
    howmany = str(input("How many questions do you want to add?"))
    Checkhowmany()
    count = int(howmany)

    CreatQA()
  
def CreatQA():
    questionlist = []
    answerlist = []
    while count != 0:
        question = str(input("Enter the question"))
        questionlist.append(question)
        answer = str(input("Enter the answer"))
        answerlist.append(answer)
        count = count - 1
  
def Checkhowmany():
    numlen = len(howmany)
    if numlen < 0:
        print("Invalid number")
        AskCQ()
    else:
      numlist = list(howmany)
      for i in range(0, numlen):
        newnum = ord(numlist[i])
        if newnum < 49 or newnum > 57:
          print("Invalid number")
          AskCQ()

def Checkfile():
    global ifexists
    ifexists = bool(path.exists(filename))

def Checkname(name):
    namelen = len(name)
    if namelen < 0:
      print("Invalid")
      ifcorrect = "false"
      return ifcorrect
    else:
      namelist = list(name)
      for i in range(0, namelen):
        newname = ord(namelist[i])
        if newname < 65 or newname > 90:
          print("Invalid")
          ifcorrect = "false"
          return ifcorrect
      

def Display():
    print("display")
def Play():
    print("play")

def main():
    print("Welcome to the quiz game!")
    Menu()
if __name__ == "__main__":
    main()
